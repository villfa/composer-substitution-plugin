{
    "require": {
        "villfa/composer-substitution-plugin": "*"
    },
    "repositories": [
        {
            "type": "path",
            "url": "../../../."
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "scripts": {
        "test": "echo ${FOO}"
    },
    "config": {
        "allow-plugins": {
            "villfa/composer-substitution-plugin": true
        }
    },
    "extra": {
        "substitution": {
            "enable": true,
            "mapping": {
                "${FOO}": {
                    "type": "env",
                    "value": "FOO"
                }
            }
        }
    }
}
