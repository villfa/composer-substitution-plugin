{
    "require": {
        "hirak/prestissimo": "*"
    },
    "repositories": [
        {
            "type": "path",
            "url": "../../../."
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "scripts": {
        "test": "echo {text}"
    },
    "config": {
        "allow-plugins": {
            "hirak/prestissimo": true,
            "villfa/composer-substitution-plugin": true
        }
    },
    "extra": {
        "substitution": {
            "enable": true,
            "mapping": {
                "{text}": {
                    "type": "literal",
                    "value": "foo"
                }
            }
        }
    }
}
